[Unit]
Description=Docker Dashboard Agent Service
After=network.target docker.service
Wants=network.target
Requires=docker.service

[Service]
Type=simple
User=www-data
Group=docker
WorkingDirectory=/home/vishwa/gpu/dock-dash-command-center/backend/agent
Environment=PATH=/usr/bin:/usr/local/bin
Environment=PYTHONPATH=/home/vishwa/gpu/dock-dash-command-center/backend/agent
ExecStart=/bin/bash -c "source /home/vishwa/gpu/dock-dash-command-center/qvp-deploy/bin/activate && python agent_server.py"
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=dock-dash-agent

[Install]
WantedBy=multi-user.target
